        <?js } else { ?>
        <li><a data-toggle="pill" href="#<?js= data.id.replace(".", "__") ?>-example-<?js= i ?>"><?js= example.caption || defaultCaption ?></a></li>
        <?js } ?>
      <?js });
  ?>
  </ul>

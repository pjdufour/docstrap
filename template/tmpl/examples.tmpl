    <?js
        data.examples.forEach(function(example, i) { ?>
          <?js if (i == 0) { ?>
          <div id="<?js= data.id.replace(".", "__") ?>-example-<?js= i ?>" class="tab-pane fade in active">
            <pre class="sunlight-highlight-<?js= example.lang ?>"><?js~ example.code ?></pre>
          </div>
          <?js } else { ?>
          <div id="<?js= data.id.replace(".", "__") ?>-example-<?js= i ?>" class="tab-pane fade">
            <pre class="sunlight-highlight-<?js= example.lang ?>"><?js~ example.code ?></pre>
          </div>
          <?js } ?>
        <?js });
    ?>
  </div>
</div>

<?js
var data = obj;
var self = this;
var defaultCaption = "Basic";
?>
<div style="padding:8px; border-radius: 8px; background: #EEE;">
  <div class="h4 pull-left" style="margin-right: 4px;">Example<?js= data.examples.length > 1? 's':'' ?>:</div>
